@page "/founder"

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-omail-800 dark:text-white">Founder Dashboard</h1>
        <div class="flex gap-2">
            <button class="bg-omail-600 hover:bg-omail-700 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center space-x-2">
                <lord-icon
                    src="https://cdn.lordicon.com/eszyyflr.json"
                    trigger="hover"
                    colors="primary:#ffffff"
                    class="w-5 h-5">
                </lord-icon>
                <span>New Project</span>
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-omail-500 dark:text-omail-300">Total Revenue</p>
                    <h3 class="text-2xl font-bold text-omail-900 dark:text-white mt-1">$45,231</h3>
                </div>
                <lord-icon
                    src="https://cdn.lordicon.com/qhviklyi.json"
                    trigger="hover"
                    colors="primary:#818cf8"
                    class="w-12 h-12">
                </lord-icon>
            </div>
            <div class="mt-4">
                <div class="flex items-center">
                    <span class="text-green-500 text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M12 7l-1.41 1.41L16.17 14H4v2h12.17l-5.58 5.59L12 23l8-8-8-8z"></path>
                        </svg>
                        12%
                    </span>
                    <span class="text-omail-500 dark:text-omail-300 text-sm ml-2">vs last month</span>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-omail-500 dark:text-omail-300">Active Projects</p>
                    <h3 class="text-2xl font-bold text-omail-900 dark:text-white mt-1">12</h3>
                </div>
                <lord-icon
                    src="https://cdn.lordicon.com/eszyyflr.json"
                    trigger="hover"
                    colors="primary:#818cf8"
                    class="w-12 h-12">
                </lord-icon>
            </div>
            <div class="mt-4">
                <div class="flex items-center">
                    <span class="text-green-500 text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M12 7l-1.41 1.41L16.17 14H4v2h12.17l-5.58 5.59L12 23l8-8-8-8z"></path>
                        </svg>
                        3
                    </span>
                    <span class="text-omail-500 dark:text-omail-300 text-sm ml-2">new this week</span>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-lg overflow-hidden">
        <div class="p-6">
            <h2 class="text-lg font-semibold text-omail-900 dark:text-white">Recent Activity</h2>
            <div class="mt-4 space-y-4">
                @for (int i = 1; i <= 5; i++)
                {
                    <div class="flex items-start space-x-4">
                        <div class="w-8 h-8 rounded-full bg-omail-100 dark:bg-omail-700 flex items-center justify-center">
                            <lord-icon
                                src="https://cdn.lordicon.com/eszyyflr.json"
                                trigger="hover"
                                colors="primary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </div>
                        <div class="flex-1">
                            <p class="text-omail-900 dark:text-white">Project @i update</p>
                            <p class="text-sm text-omail-500 dark:text-omail-300">2 hours ago</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
