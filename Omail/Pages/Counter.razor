@page "/counter"

<PageTitle>Counter - Omail UI</PageTitle>

<div class="card dark:bg-omail-dark/30 bg-white shadow-md rounded-lg overflow-hidden transition-colors duration-300">
    <div class="p-6">
        <h1 class="text-3xl font-bold text-omail-primary dark:text-omail-light mb-6 transition-colors duration-300">Counter</h1>

        <div class="bg-omail-light/20 dark:bg-omail-primary/10 rounded-lg p-8 text-center mb-8 transition-colors duration-300">
            <span class="text-4xl font-bold text-omail-primary dark:text-omail-light block mb-2 transition-colors duration-300" role="status">@currentCount</span>
            <span class="text-omail-600 dark:text-omail-light/80 transition-colors duration-300">Current Count</span>
        </div>

        <div class="flex flex-wrap gap-4">
            <button class="btn-primary flex items-center" @onclick="IncrementCount">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Increment
            </button>
            
            <button class="px-4 py-2 border border-omail-primary text-omail-primary hover:bg-omail-primary hover:text-white rounded shadow flex items-center" @onclick="DecrementCount">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                </svg>
                Decrement
            </button>
            
            <button class="px-4 py-2 bg-omail-200 dark:bg-omail-700 text-omail-700 dark:text-omail-200 hover:bg-omail-300 dark:hover:bg-omail-600 rounded shadow flex items-center transition-colors duration-300" @onclick="ResetCount">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reset
            </button>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    
    private void DecrementCount()
    {
        if (currentCount > 0)
            currentCount--;
    }
    
    private void ResetCount()
    {
        currentCount = 0;
    }
}
