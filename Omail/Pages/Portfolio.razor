@page "/portfolio"

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-omail-800 dark:text-white">Portfolio</h1>
        <div class="flex gap-2">
            <button class="bg-omail-600 hover:bg-omail-700 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center space-x-2">
                <lord-icon
                    src="https://cdn.lordicon.com/fihkmkwt.json"
                    trigger="hover"
                    colors="primary:#ffffff"
                    class="w-5 h-5">
                </lord-icon>
                <span>Add New</span>
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        @for (int i = 1; i <= 6; i++)
        {
            <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-lg overflow-hidden group hover:shadow-xl transition-all duration-300">
                <div class="relative">
                    <div class="aspect-w-16 aspect-h-9 bg-gradient-to-br from-omail-500 to-omail-600">
                        <div class="w-full h-full flex items-center justify-center">
                            <lord-icon
                                src="https://cdn.lordicon.com/fihkmkwt.json"
                                trigger="hover"
                                colors="primary:#ffffff"
                                class="w-16 h-16">
                            </lord-icon>
                        </div>
                    </div>
                    <div class="absolute top-2 right-2">
                        <span class="px-2 py-1 bg-omail-700/80 text-white text-sm rounded-lg">Active</span>
                    </div>
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-omail-900 dark:text-white">Project @i</h3>
                    <p class="text-omail-500 dark:text-omail-300 text-sm mt-1">Last updated 2 days ago</p>
                    <div class="mt-4 flex justify-between items-center">
                        <div class="flex -space-x-2">
                            @for (int j = 1; j <= 3; j++)
                            {
                                <div class="w-8 h-8 rounded-full bg-omail-200 dark:bg-omail-700 border-2 border-white dark:border-omail-800 flex items-center justify-center text-xs font-medium">
                                    U@j
                                </div>
                            }
                        </div>
                        <button class="text-omail-600 hover:text-omail-700 dark:text-omail-400 dark:hover:text-omail-300">
                            <lord-icon
                                src="https://cdn.lordicon.com/wxnxiano.json"
                                trigger="hover"
                                colors="primary:#818cf8"
                                class="w-6 h-6">
                            </lord-icon>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
