@page "/browse"

<div class="space-y-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <h1 class="text-2xl font-bold text-omail-800 dark:text-white">Browse</h1>
        <div class="w-full md:w-auto flex space-x-2">
            <div class="flex-1 md:w-64">
                <input type="search" 
                       class="w-full px-4 py-2 rounded-lg border border-omail-200 dark:border-omail-700 bg-white dark:bg-omail-800/50 text-omail-900 dark:text-white focus:ring-2 focus:ring-omail-500 dark:focus:ring-omail-400 transition-all duration-300"
                       placeholder="Search...">
            </div>
            <button class="bg-omail-600 hover:bg-omail-700 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center space-x-2">
                <lord-icon
                    src="https://cdn.lordicon.com/msoeawqm.json"
                    trigger="hover"
                    colors="primary:#ffffff"
                    class="w-5 h-5">
                </lord-icon>
                <span>Filter</span>
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                <div class="aspect-w-16 aspect-h-9 bg-omail-100 dark:bg-omail-700">
                    <div class="w-full h-full flex items-center justify-center text-omail-400 dark:text-omail-500">
                        <lord-icon
                            src="https://cdn.lordicon.com/msoeawqm.json"
                            trigger="hover"
                            colors="primary:#818cf8"
                            class="w-12 h-12">
                        </lord-icon>
                    </div>
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-omail-900 dark:text-white">Item @i</h3>
                    <p class="text-omail-500 dark:text-omail-300 text-sm mt-1">Category</p>
                    <div class="mt-4 flex justify-between items-center">
                        <span class="text-omail-700 dark:text-omail-100 font-bold">$99.99</span>
                        <button class="text-omail-600 hover:text-omail-700 dark:text-omail-400 dark:hover:text-omail-300">
                            <lord-icon
                                src="https://cdn.lordicon.com/slkvcfos.json"
                                trigger="hover"
                                colors="primary:#818cf8"
                                class="w-6 h-6">
                            </lord-icon>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
