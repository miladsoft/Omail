@page "/inbox"

<PageTitle>Inbox - Omail</PageTitle>

<div class="space-y-4">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-omail-800 dark:text-white flex items-center">
            <lord-icon
                src="https://cdn.lordicon.com/tkaubbni.json"
                trigger="loop"
                delay="1000"
                colors="primary:#121331,secondary:#818cf8"
                class="w-8 h-8 mr-2">
            </lord-icon>
            Inbox
            <span class="ml-2 bg-omail-600 text-white text-xs px-2 py-0.5 rounded-full">24</span>
        </h1>
        <div class="flex space-x-2">
            <div class="relative">
                <input type="text" placeholder="Search emails..."
                       class="pl-10 pr-4 py-2 border border-omail-200 dark:border-omail-700 rounded-lg bg-white dark:bg-omail-800/50 text-omail-800 dark:text-white focus:ring-2 focus:ring-omail-500 dark:focus:ring-omail-400 w-48 md:w-64 transition-all duration-300"/>
                <lord-icon
                    src="https://cdn.lordicon.com/msoeawqm.json"
                    trigger="hover"
                    colors="primary:#121331,secondary:#818cf8"
                    class="absolute left-3 top-2.5 w-5 h-5">
                </lord-icon>
            </div>
            <button class="bg-omail-600 hover:bg-omail-700 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center space-x-2">
                <lord-icon
                    src="https://cdn.lordicon.com/wloilxuq.json"
                    trigger="hover"
                    colors="primary:#ffffff"
                    class="w-5 h-5">
                </lord-icon>
                <span>Compose</span>
            </button>
        </div>
    </div>

    <div class="grid grid-cols-12 gap-4">
        <!-- Email folders sidebar -->
        <div class="col-span-12 md:col-span-3 space-y-2">
            <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-md">
                <div class="p-4">
                    <a href="inbox" class="flex items-center px-3 py-2 text-omail-700 dark:text-omail-100 bg-omail-100/50 dark:bg-omail-600/40 rounded-lg mb-1 font-medium border-l-4 border-omail-600 dark:border-omail-100">
                        <lord-icon
                            src="https://cdn.lordicon.com/tkaubbni.json"
                            trigger="hover"
                            colors="primary:#121331,secondary:#818cf8"
                            class="w-5 h-5 mr-3">
                        </lord-icon>
                        <span>Inbox</span>
                        <span class="ml-auto bg-omail-600 text-white text-xs px-2 py-0.5 rounded-full">24</span>
                    </a>
                    <a href="sent" class="flex items-center px-3 py-2 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-lg mb-1">
                        <lord-icon
                            src="https://cdn.lordicon.com/iltqorsz.json"
                            trigger="hover"
                            colors="primary:#121331,secondary:#818cf8"
                            class="w-5 h-5 mr-3">
                        </lord-icon>
                        <span>Sent</span>
                    </a>
                    <a href="drafts" class="flex items-center px-3 py-2 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-lg mb-1">
                        <lord-icon
                            src="https://cdn.lordicon.com/puvaffet.json"
                            trigger="hover"
                            colors="primary:#121331,secondary:#818cf8"
                            class="w-5 h-5 mr-3">
                        </lord-icon>
                        <span>Drafts</span>
                        <span class="ml-auto bg-omail-500 text-white text-xs px-2 py-0.5 rounded-full">3</span>
                    </a>
                    <a href="trash" class="flex items-center px-3 py-2 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-lg">
                        <lord-icon
                            src="https://cdn.lordicon.com/gsqxdxog.json"
                            trigger="hover"
                            colors="primary:#121331,secondary:#818cf8"
                            class="w-5 h-5 mr-3">
                        </lord-icon>
                        <span>Trash</span>
                    </a>
                </div>
                <div class="border-t border-omail-100 dark:border-omail-700 p-4">
                    <h3 class="text-sm font-medium text-omail-700 dark:text-omail-300 mb-2">Labels</h3>
                    <div class="space-y-1">
                        <a href="#" class="flex items-center px-3 py-1 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-md">
                            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                            <span>Important</span>
                        </a>
                        <a href="#" class="flex items-center px-3 py-1 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-md">
                            <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                            <span>Work</span>
                        </a>
                        <a href="#" class="flex items-center px-3 py-1 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-md">
                            <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2"></span>
                            <span>Personal</span>
                        </a>
                        <a href="#" class="flex items-center px-3 py-1 text-omail-700 dark:text-omail-100 hover:bg-omail-100/50 dark:hover:bg-omail-700/30 rounded-md">
                            <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
                            <span>Urgent</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-md p-4">
                <div class="flex items-center justify-between mb-3">
                    <h3 class="text-sm font-medium text-omail-800 dark:text-omail-200">Storage</h3>
                    <span class="text-xs text-omail-500 dark:text-omail-400">75% used</span>
                </div>
                <div class="w-full bg-omail-200 dark:bg-omail-700 rounded-full h-2">
                    <div class="bg-omail-600 h-2 rounded-full" style="width: 75%"></div>
                </div>
                <p class="text-xs text-omail-500 dark:text-omail-400 mt-1">7.5 GB of 10 GB used</p>
            </div>
        </div>

        <!-- Email list -->
        <div class="col-span-12 md:col-span-9">
            <div class="bg-white dark:bg-omail-800/50 rounded-xl shadow-md overflow-hidden">
                <div class="border-b border-omail-200 dark:border-omail-700 p-3 flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                        <input type="checkbox" class="rounded border-omail-300 text-omail-600 focus:ring-omail-500"/>
                        <button class="p-1 hover:bg-omail-100 dark:hover:bg-omail-700 rounded-md">
                            <lord-icon
                                src="https://cdn.lordicon.com/nxooksci.json"
                                trigger="hover"
                                colors="primary:#121331,secondary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </button>
                        <button class="p-1 hover:bg-omail-100 dark:hover:bg-omail-700 rounded-md">
                            <lord-icon
                                src="https://cdn.lordicon.com/gsqxdxog.json"
                                trigger="hover"
                                colors="primary:#121331,secondary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </button>
                        <button class="p-1 hover:bg-omail-100 dark:hover:bg-omail-700 rounded-md">
                            <lord-icon
                                src="https://cdn.lordicon.com/kbtmbyzy.json"
                                trigger="hover"
                                colors="primary:#121331,secondary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </button>
                    </div>
                    <div class="flex items-center space-x-2">
                        <span class="text-sm text-omail-700 dark:text-omail-300">1-20 of 24</span>
                        <button class="p-1 hover:bg-omail-100 dark:hover:bg-omail-700 rounded-md">
                            <lord-icon
                                src="https://cdn.lordicon.com/iifryyua.json"
                                trigger="hover"
                                colors="primary:#121331,secondary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </button>
                        <button class="p-1 hover:bg-omail-100 dark:hover:bg-omail-700 rounded-md">
                            <lord-icon
                                src="https://cdn.lordicon.com/jxwksgwv.json"
                                trigger="hover"
                                colors="primary:#121331,secondary:#818cf8"
                                class="w-5 h-5">
                            </lord-icon>
                        </button>
                    </div>
                </div>

                <!-- Email items -->
                <div class="divide-y divide-omail-200 dark:divide-omail-700">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <a href="email-detail/1" class="block hover:bg-omail-50 dark:hover:bg-omail-700/50 transition-colors duration-150 @(i % 3 == 0 ? "bg-omail-50/50 dark:bg-omail-700/30" : "")">
                            <div class="flex items-center px-4 py-3">
                                <input type="checkbox" class="rounded border-omail-300 text-omail-600 focus:ring-omail-500 mr-3"/>
                                <div class="flex-shrink-0 mr-3">
                                    <div class="w-10 h-10 rounded-full bg-omail-200 dark:bg-omail-700 flex items-center justify-center text-omail-700 dark:text-omail-200 font-medium">
                                        @(i % 4 == 0 ? "MS" : i % 3 == 0 ? "JD" : i % 2 == 0 ? "AK" : "TS")
                                    </div>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <div class="flex items-center justify-between">
                                        <p class="text-sm font-medium text-omail-900 dark:text-omail-100 truncate">
                                            @(i % 4 == 0 ? "Marketing Team" : i % 3 == 0 ? "John Doe" : i % 2 == 0 ? "Anna K." : "Tech Support")
                                        </p>
                                        <p class="ml-2 flex-shrink-0 text-xs text-omail-500 dark:text-omail-400">
                                            @(i % 3 == 0 ? "10:24 AM" : i % 2 == 0 ? "Yesterday" : $"{i} days ago")
                                        </p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-omail-800 dark:text-omail-200 font-medium truncate">
                                            @(i % 4 == 0 ? "Weekly Newsletter - Latest Updates and News" : 
                                              i % 3 == 0 ? "Meeting reminder for tomorrow's project review" : 
                                              i % 2 == 0 ? "Document review request: Please provide feedback" : 
                                              "Your support ticket #283" + i + " has been updated")
                                        </p>
                                        <p class="text-sm text-omail-500 dark:text-omail-400 truncate">
                                            @(i % 4 == 0 ? "Check out what's new this week in our latest newsletter edition..." : 
                                              i % 3 == 0 ? "Hi there, just a friendly reminder about our scheduled meeting tomorrow at 2 PM..." : 
                                              i % 2 == 0 ? "I've attached the document for your review. Please provide your feedback by..." : 
                                              "Your support request has been updated. Here's the latest status update regarding your issue...")
                                        </p>
                                    </div>
                                </div>
                                <div class="ml-3 flex-shrink-0 flex items-center">
                                    @if (i % 5 == 0)
                                    {
                                        <span class="inline-block w-2 h-2 bg-omail-600 rounded-full mr-2"></span>
                                    }
                                    @if (i % 4 == 0)
                                    {
                                        <lord-icon
                                            src="https://cdn.lordicon.com/xhbsnkyp.json"
                                            trigger="hover"
                                            colors="primary:#818cf8"
                                            class="w-5 h-5">
                                        </lord-icon>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
