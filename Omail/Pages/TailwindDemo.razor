@page "/tailwind-demo"

<PageTitle>Components - Omail UI</PageTitle>

<div class="card dark:bg-omail-dark/30 bg-white shadow-md rounded-lg overflow-hidden transition-colors duration-300">
    <div class="p-6">
        <h1 class="text-3xl font-bold text-omail-primary dark:text-omail-light mb-6 transition-colors duration-300">
            Omail UI Components
        </h1>
        
        <div class="space-y-12">
            <!-- Button Section -->
            <section>
                <h2 class="text-2xl font-semibold text-omail-dark dark:text-omail-light mb-4 transition-colors duration-300">Buttons</h2>
                <div class="bg-omail-light/10 dark:bg-omail-primary/10 p-6 rounded-lg mb-4 transition-colors duration-300">
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                        <button class="btn-primary">Primary Button</button>
                        <button class="px-4 py-2 border border-omail-primary text-omail-primary hover:bg-omail-primary hover:text-white rounded shadow transition-colors">
                            Secondary
                        </button>
                        <button class="px-4 py-2 bg-omail-200 dark:bg-omail-700 text-omail-700 dark:text-omail-200 hover:bg-omail-300 dark:hover:bg-omail-600 rounded shadow transition-colors duration-300">
                            Neutral
                        </button>
                        <button class="px-4 py-2 bg-omail-500 hover:bg-omail-600 text-white rounded shadow">
                            Danger
                        </button>
                    </div>
                </div>
                <p class="text-omail-600 dark:text-omail-light/70 text-sm transition-colors duration-300">
                    Use these button styles consistently across your application for a cohesive user experience.
                </p>
            </section>
            
            <!-- Card Section -->
            <section>
                <h2 class="text-2xl font-semibold text-omail-dark dark:text-omail-light mb-4 transition-colors duration-300">Cards</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white dark:bg-omail-dark/50 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
                        <div class="h-40 bg-gradient-to-r from-omail-primary to-omail-primary/70 flex items-center justify-center">
                            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
                            </svg>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-semibold text-omail-dark dark:text-omail-light mb-2 transition-colors duration-300">
                                Feature Card
                            </h3>
                            <p class="text-omail-600 dark:text-omail-light/80 mb-4 transition-colors duration-300">
                                This card showcases a key feature with an icon and gradient background.
                            </p>
                            <button class="text-omail-primary dark:text-omail-light hover:underline transition-colors duration-300">
                                Learn more â†’
                            </button>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-omail-dark/50 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
                        <div class="p-5">
                            <div class="flex items-center mb-4">
                                <div class="bg-omail-primary/20 dark:bg-omail-primary/40 rounded-full p-2 mr-3 transition-colors duration-300">
                                    <svg class="w-6 h-6 text-omail-primary dark:text-omail-light" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-omail-dark dark:text-omail-light transition-colors duration-300">
                                    Task Card
                                </h3>
                            </div>
                            <p class="text-omail-600 dark:text-omail-light/80 mb-4 transition-colors duration-300">
                                A simple card with an icon indicator and minimal design.
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-omail-primary dark:text-omail-light/80 transition-colors duration-300">
                                    Updated 2h ago
                                </span>
                                <button class="text-sm text-omail-primary dark:text-omail-light hover:underline transition-colors duration-300">
                                    View
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white dark:bg-omail-dark/50 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
                        <div class="p-5 border-b border-omail-200 dark:border-omail-700 transition-colors duration-300">
                            <h3 class="text-lg font-semibold text-omail-dark dark:text-omail-light transition-colors duration-300">
                                Stats Card
                            </h3>
                        </div>
                        <div class="p-5">
                            <div class="text-3xl font-bold text-omail-primary dark:text-omail-light mb-1 transition-colors duration-300">
                                89%
                            </div>
                            <p class="text-omail-600 dark:text-omail-light/80 mb-4 transition-colors duration-300">
                                Completion rate
                            </p>
                            <div class="w-full bg-omail-200 dark:bg-omail-700 rounded-full h-2.5 transition-colors duration-300">
                                <div class="bg-omail-primary h-2.5 rounded-full" style="width: 89%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Form Elements -->
            <section>
                <h2 class="text-2xl font-semibold text-omail-dark dark:text-omail-light mb-4 transition-colors duration-300">
                    Form Elements
                </h2>
                <div class="bg-omail-light/10 dark:bg-omail-primary/10 p-6 rounded-lg transition-colors duration-300">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div>
                                <label for="name" class="block text-sm font-medium text-omail-dark dark:text-omail-light mb-1 transition-colors duration-300">
                                    Name
                                </label>
                                <input type="text" id="name" class="w-full px-3 py-2 border border-omail-300 dark:border-omail-700 rounded-md shadow-sm focus:outline-none focus:ring-omail-primary focus:border-omail-primary bg-white dark:bg-omail-900 text-omail-900 dark:text-omail-100 transition-colors duration-300" placeholder="Your name">
                            </div>
                            
                            <div>
                                <label for="email" class="block text-sm font-medium text-omail-dark dark:text-omail-light mb-1 transition-colors duration-300">
                                    Email
                                </label>
                                <input type="email" id="email" class="w-full px-3 py-2 border border-omail-300 dark:border-omail-700 rounded-md shadow-sm focus:outline-none focus:ring-omail-primary focus:border-omail-primary bg-white dark:bg-omail-900 text-omail-900 dark:text-omail-100 transition-colors duration-300" placeholder="you@example.com">
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div>
                                <label for="message" class="block text-sm font-medium text-omail-dark dark:text-omail-light mb-1 transition-colors duration-300">
                                    Message
                                </label>
                                <textarea id="message" rows="4" class="w-full px-3 py-2 border border-omail-300 dark:border-omail-700 rounded-md shadow-sm focus:outline-none focus:ring-omail-primary focus:border-omail-primary bg-white dark:bg-omail-900 text-omail-900 dark:text-omail-100 transition-colors duration-300" placeholder="Your message"></textarea>
                            </div>
                            
                            <div class="flex items-center">
                                <input id="remember" type="checkbox" class="h-4 w-4 text-omail-primary focus:ring-omail-primary border-omail-300 rounded">
                                <label for="remember" class="ml-2 block text-sm text-omail-700 dark:text-omail-light/80 transition-colors duration-300">
                                    Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-6">
                        <button class="btn-primary">Submit Form</button>
                    </div>
                </div>
            </section>
            
            <!-- Features List -->
            <section>
                <h2 class="text-2xl font-semibold text-omail-dark dark:text-omail-light mb-6 transition-colors duration-300">
                    Omail UI Features
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-omail-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-omail-dark dark:text-omail-light transition-colors duration-300">
                                Global Design System
                            </h3>
                            <p class="mt-2 text-omail-600 dark:text-omail-light/80 transition-colors duration-300">
                                A cohesive set of components that work together perfectly across your entire application.
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-omail-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.171 2.171a2 2 0 010 2.828l-8.486 8.486a2 2 0 01-2.828 0l-2.171-2.171a2 2 0 010-2.828L7.343 11"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-omail-dark dark:text-omail-light transition-colors duration-300">
                                Tailwind Integration
                            </h3>
                            <p class="mt-2 text-omail-600 dark:text-omail-light/80 transition-colors duration-300">
                                Built on top of Tailwind CSS for maximum flexibility and minimal CSS footprint.
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-omail-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-omail-dark dark:text-omail-light transition-colors duration-300">
                                Responsive by Default
                            </h3>
                            <p class="mt-2 text-omail-600 dark:text-omail-light/80 transition-colors duration-300">
                                Every component is designed to work beautifully on any device size.
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-omail-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-omail-dark dark:text-omail-light transition-colors duration-300">
                                Dark Mode Support
                            </h3>
                            <p class="mt-2 text-omail-600 dark:text-omail-light/80 transition-colors duration-300">
                                Seamless light and dark mode switching with smooth transitions between themes.
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
